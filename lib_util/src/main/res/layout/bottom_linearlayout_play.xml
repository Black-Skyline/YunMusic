<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_linearLayout_music"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/main_navi_bottom"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/main_bottom_music_image_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/icon_bottom_music_record" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/main_bottom_music_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:lines="1"
            android:text="军哥"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_bottom_music_tv_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:lines="1"
            android:text=" - 最炫民族风"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/main_bottom_music_image_play"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:background="@color/transparent"
        android:src="@drawable/icon_bottom_music_play" />

    <ImageView
        android:id="@+id/main_bottom_music_image_list"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:background="@color/transparent"
        android:src="@drawable/icon_bottom_music_list" />


</LinearLayout>