<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_picture_music_tv_number"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_picture_music_name"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="11"
        android:textSize="15sp"
        android:textStyle="bold"
        android:lines="1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/item_picture_music_tv_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_picture_music_singer"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="11"
        android:textSize="10sp"
        android:lines="1"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_picture_music_tv_number"
        app:layout_constraintTop_toBottomOf="@+id/item_picture_music_name" />

    <ImageView
        android:id="@+id/item_picture_music_video"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_video_play"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_picture_music_more"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_picture_music_more"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_more_black"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>