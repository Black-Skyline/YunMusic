<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/main_drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:popupTheme="@style/Theme.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways|snap"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/main_navi_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_tb"
            android:layout_above="@+id/main_linearLayout_music" />

        <LinearLayout
            android:id="@+id/main_linearLayout_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/main_navi_bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_bottom_music_image_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_bottom_music_record" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/main_bottom_music_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:lines="1"
                    android:text="haof"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/main_bottom_music_tv_singer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:lines="1"
                    android:text=" - 1561"
                    android:textSize="20dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/main_bottom_music_image_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_bottom_music_play" />

            <ImageView
                android:id="@+id/main_bottom_music_image_list"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_bottom_music_list" />


        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_navi_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/navi_bottom"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/main_drawer_navigation"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/item_drawer"
        app:headerLayout="@layout/drawer_navi_header"/>

</androidx.drawerlayout.widget.DrawerLayout>