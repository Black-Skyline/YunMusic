<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/main_drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:popupTheme="@style/Theme.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <ImageView
                android:id="@+id/main_top_navi"
                android:src="@drawable/icon_bottom_music_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="270dp"
                android:layout_height="28dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/main_img_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_search_hui"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:id="@+id/main_tv_search_suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.Toolbar>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/main_navi_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_tb"
            android:layout_above="@+id/main_linearLayout_music" />

        <LinearLayout
            android:id="@+id/main_linearLayout_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/main_navi_bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_bottom_music_image_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/icon_bottom_music_record" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/main_bottom_music_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:lines="1"
                    android:text="haof"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/main_bottom_music_tv_singer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:lines="1"
                    android:text=" - 1561"
                    android:textSize="20sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/main_bottom_music_image_play"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_bottom_music_play" />

            <ImageView
                android:id="@+id/main_bottom_music_image_list"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_bottom_music_list" />


        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_navi_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/navi_bottom"
            app:labelVisibilityMode="selected"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/main_drawer_navigation"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/item_drawer"
        app:headerLayout="@layout/drawer_navi_header"/>

</androidx.drawerlayout.widget.DrawerLayout>